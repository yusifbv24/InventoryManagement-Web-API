@model InventoryManagement.WebApp.Models.Inventory.AdjustInventoryViewModel

@{
    ViewData["Title"] = "Adjust Inventory";
    var inventoryItem = ViewBag.InventoryItem as InventoryManagement.WebApp.Models.Inventory.InventoryItemViewModel;
}

<h1>Adjust Inventory</h1>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Current Inventory Details</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Product:</dt>
            <dd class="col-sm-9">@inventoryItem?.ProductName</dd>

            <dt class="col-sm-3">SKU:</dt>
            <dd class="col-sm-9">@inventoryItem?.ProductSku</dd>

            <dt class="col-sm-3">Warehouse:</dt>
            <dd class="col-sm-9">@inventoryItem?.WarehouseName</dd>

            <dt class="col-sm-3">Location:</dt>
            <dd class="col-sm-9">@inventoryItem?.LocationCode</dd>

            <dt class="col-sm-3">Current Quantity:</dt>
            <dd class="col-sm-9">@inventoryItem?.Quantity</dd>

            <dt class="col-sm-3">Reorder Threshold:</dt>
            <dd class="col-sm-9">@inventoryItem?.ReorderThreshold</dd>

            <dt class="col-sm-3">Target Stock Level:</dt>
            <dd class="col-sm-9">@inventoryItem?.TargetStockLevel</dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Adjust">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryItemId" />
            <input type="hidden" asp-for="CreatedBy" />

            <div class="form-group mb-3">
                <label class="control-label">Adjustment Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsAddition" value="true" checked id="addition" />
                    <label class="form-check-label" for="addition">Add Inventory (Stock Received)</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="IsAddition" value="false" id="subtraction" />
                    <label class="form-check-label" for="subtraction">Remove Inventory (Manual Adjustment)</label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label">Quantity to Adjust</label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notes (Optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <small class="form-text text-muted">Please provide reason for this adjustment.</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Adjustment" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to Inventory</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}