@model IEnumerable<InventoryManagement.WebApp.Models.Inventory.InventoryItemViewModel>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="mb-3">
    <a asp-action="LowStock" class="btn btn-warning">View Low Stock Items</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>SKU</th>
            <th>Warehouse</th>
            <th>Location</th>
            <th>Quantity</th>
            <th>Reorder Threshold</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsLowStock ? "table-danger" : "")">
                <td>@item.ProductName</td>
                <td>@item.ProductSku</td>
                <td>@item.WarehouseName</td>
                <td>@item.LocationCode</td>
                <td>@item.Quantity</td>
                <td>@item.ReorderThreshold</td>
                <td>
                    @if (item.IsLowStock)
                    {
                        <span class="badge bg-danger">Low Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-success">In Stock</span>
                    }
                </td>
                <td>
                    <a asp-action="Adjust" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Adjust</a>
                </td>
            </tr>
        }
    </tbody>
</table>