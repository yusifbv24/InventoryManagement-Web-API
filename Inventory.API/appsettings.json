{
    "ConnectionStrings": {
        "InventoryDatabase": "Host=localhost;Port=5432;Database=inventory-service;Username=postgres;Password=mysecretpassword;"
    },
    "RabbitMQ": {
        "HostName": "localhost",
        "UserName": "guest",
        "Password": "guest",
        "VirtualHost": "/",
        "Port": 5672,
        "Exchanges": {
            "InventoryEvents": "inventory_events",
            "OrderEvents": "order_events"
        },
        "Queues": {
            "OrderCreated": "order_created_queue",
            "ProductDetailsRequested": "product_details_requested_queue"
        }
    },
    "Services": {
        "Products": {
            "Url": "http://localhost:5000/api/"
        }
    },
    "Api": {
        "Title": "Inventory API",
        "Version": "v1",
        "Description": "API for managing inventory, warehouses, and stock movements"
    },
    "Swagger": {
        "Enabled": true
    },
    "Cors": {
        "Origins": [
            "http://localhost:3000",
            "https://inventorymanagement.com"
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "SignalR": {
        "HubPath": "/hubs/inventory"
    },
    "AllowedHosts": "*",
    "HealthChecks": {
        "Enabled": true,
        "Path": "/health"
    },
    "ApiVersioning": {
        "ReportApiVersions": true,
        "DefaultApiVersion": "1.0",
        "AssumeDefaultVersionWhenUnspecified": true
    }
}