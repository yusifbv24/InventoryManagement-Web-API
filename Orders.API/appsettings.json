{
    "ConnectionStrings": {
        "OrdersDatabase": "Host=localhost;Port=5432;Database=order-service;Username=postgres;Password=mysecretpassword;"
    },
    "RabbitMQ": {
        "HostName": "localhost",
        "UserName": "guest",
        "Password": "guest",
        "VirtualHost": "/",
        "Port": 5672,
        "Exchanges": {
            "OrderEvents": "order_events",
            "InventoryEvents": "inventory_events"
        },
        "Queues": {
            "InventoryReserved": "inventory_reserved_queue",
            "InventoryInsufficient": "inventory_insufficient_queue"
        }
    },
    "Services": {
        "Products": {
            "Url": "http://localhost:5000/api/"
        },
        "Inventory": {
            "Url": "http://localhost:5200/api/"
        }
    },
    "Api": {
        "Title": "Orders API",
        "Version": "v1",
        "Description": "API for managing customer orders"
    },
    "Swagger": {
        "Enabled": true
    },
    "Cors": {
        "Origins": [
            "http://localhost:3000",
            "https://inventorymanagement.com"
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "SignalR": {
        "HubPath": "/hubs/orders"
    },
    "AllowedHosts": "*",
    "HealthChecks": {
        "Enabled": true,
        "Path": "/health"
    },
    "ApiVersioning": {
        "ReportApiVersions": true,
        "DefaultApiVersion": "1.0",
        "AssumeDefaultVersionWhenUnspecified": true
    }
}