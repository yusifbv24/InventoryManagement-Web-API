{
    "ConnectionStrings": {
        "ProductsDatabase": "Host=localhost;Port=5432;Database=product-service;Username=postgres;Password=mysecretpassword;"
    },
    "RabbitMQ": {
        "HostName": "localhost",
        "UserName": "guest",
        "Password": "guest",
        "VirtualHost": "/",
        "Port": 5672,
        "Exchanges": {
            "ProductEvents": "product_events",
            "InventoryEvents": "inventory_events"
        },
        "Queues": {
            "ProductDetailsRequests": "product_details_requests"
        }
    },
    "Api": {
        "Title": "Products API",
        "Version": "v1",
        "Description": "API for managing products, categories, and suppliers"
    },
    "Swagger": {
        "Enabled": true
    },
    "Cors": {
        "Origins": [
            "http://localhost:3000",
            "https://inventorymanagement.com"
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        }
    },
    "SignalR": {
        "HubPath": "/hubs/products"
    },
    "AllowedHosts": "*"
}